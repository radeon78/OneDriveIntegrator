@model DetailsViewModel
@{
    ViewData["Title"] = "File Details";
}

<form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">File name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Details.Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Size</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Details.Size">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Download</label>
        <div class="col-sm-10">
            <a href="@Model.Details.DownloadUrl" class="link-primary">@Model.Details.DownloadUrl</a>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Type</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Details.File!.MimeType">
        </div>
    </div>
</form>