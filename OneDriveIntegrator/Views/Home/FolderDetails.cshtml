@model DetailsViewModel
@{
    ViewData["Title"] = "Folder Details";
}

<form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Folder name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Details.Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Size</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Details.Size">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Child's count</label>
        <div class="col-sm-10">
            <a asp-action="Index" asp-route-id="@Model.Details.Id">
                @Model.Details.Folder!.ChildCount
            </a>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Subscription</label>
        <div class="col-sm-10">
            @if (Model.SubscriptionEnabled)
            {
                <a asp-action="Unsubscribe" asp-route-id="@Model.Details.Id">
                    Disable
                </a>
            }
            else
            {
                <a asp-action="Subscribe" asp-route-id="@Model.Details.Id">
                    Enable
                </a>
            }
        </div>
    </div>
</form>