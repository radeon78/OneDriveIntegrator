@model OneDriveIntegrator.Services.MicrosoftGraph.Models.DetailsResponse
@{
    ViewData["Title"] = "Folder Details";
}

<form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Folder name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Size</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="@Model.Size">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Child's count</label>
        <div class="col-sm-10">
            <a asp-action="Index" asp-route-id="@Model.Id">
                @Model.Folder!.ChildCount
            </a>
        </div>
    </div>
</form>